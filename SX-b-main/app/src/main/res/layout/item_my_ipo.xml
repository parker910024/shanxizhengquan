<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <!-- 第一行：名称 + 状态 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="江天科技" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hq_rise_color"
            android:textSize="13sp"
            tools:text="中签10(手)(已认缴)" />
    </LinearLayout>

    <!-- 第二行：代码 + 日期 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/hq_stock_code_color"
            android:textSize="12sp"
            tools:text="920121" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hq_stock_code_color"
            android:textSize="12sp"
            tools:text="2025-12-16" />
    </LinearLayout>

    <!-- 第三行：发行价 + 数量(股) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发行价"
            android:textColor="@color/hq_text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="21.21" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数量(股)"
            android:textColor="@color/hq_text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="500" />
    </LinearLayout>

    <!-- 第四行：上市时间 + 已认缴 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上市时间"
            android:textColor="@color/hq_text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_listing_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="2026-01-15" />

        <TextView
            android:id="@+id/tv_paid_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已认缴"
            android:textColor="@color/hq_text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_paid_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="10940.00" />
    </LinearLayout>

    <!-- 去认缴按钮（中签且未认缴时显示） -->
    <TextView
        android:id="@+id/btn_renjiao"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_btn_subscribe"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:text="去认缴"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/hq_divider_color" />
</LinearLayout>
