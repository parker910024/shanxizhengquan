<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <!-- 第一行：股票名称+代码 / 当前状态 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stock_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#303030"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="世昌股份 920022" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前状态"
            android:textColor="@color/hq_text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="#303030"
            android:textSize="12sp"
            tools:text="挂单" />
    </LinearLayout>

    <!-- 第二行：买卖类型标签 / 委托价格 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买卖类型 "
            android:textColor="@color/hq_text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_buy_type_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_tag"
            android:paddingHorizontal="6dp"
            android:paddingVertical="1dp"
            android:textColor="@color/hq_rise_color"
            android:textSize="11sp"
            tools:text="证券买入(大宗)" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="委托价格 "
            android:textColor="@color/hq_text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#303030"
            android:textSize="12sp"
            tools:text="10.90" />
    </LinearLayout>

    <!-- 第三行：委托数量 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="委托数量 "
            android:textColor="@color/hq_text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#303030"
            android:textSize="12sp"
            tools:text="200" />

        <!-- 撤单按钮保留（紧凑型） -->
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_entrust_cancel_btn"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/trade_cancel"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/hq_divider_color" />

</LinearLayout>
