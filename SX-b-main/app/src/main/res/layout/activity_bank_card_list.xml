<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA"
    tools:context=".ui.bankcard.BankCardListActivity">

    <include
        android:id="@+id/title_bar"
        layout="@layout/include_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- T+1资金 / 可转出金额 -->
    <LinearLayout
        android:id="@+id/layout_funds_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T+1资金"
            android:textColor="@color/text_selected_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_t1_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/user_red_primary"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="可转出金额"
            android:textColor="@color/text_selected_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_transferable_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/user_red_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider_funds"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/layout_funds_row" />

    <!-- 银行卡列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bank_cards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/divider_funds"
        app:layout_constraintBottom_toTopOf="@id/btn_add_card"
        tools:listitem="@layout/item_bank_card" />

    <!-- 添加储蓄卡按钮 -->
    <Button
        android:id="@+id/btn_add_card"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_btn_red"
        android:text="添加储蓄卡"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/layout_rules" />

    <!-- 说明规则 -->
    <LinearLayout
        android:id="@+id/layout_rules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/nav_bar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.新用户注册后必须通过添加银行卡。"
            android:textColor="@color/text_second_color"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="2.真实姓名必须和绑定银行卡户名一样。"
            android:textColor="@color/text_second_color"
            android:textSize="12sp" />
    </LinearLayout>

    <ex.ss.lib.base.view.ImmersiveNavigationBarHolder
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
