<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 顶部标题栏 -->
    <include
        android:id="@+id/title_bar"
        layout="@layout/include_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 买入/卖出 Tab 条 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar">

        <TextView
            android:id="@+id/tab_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="买入"
            android:textColor="#F44336"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tab_sell"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tab_sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="卖出"
            android:textColor="#999999"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tab_buy"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tab_indicator"
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="#F44336"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tab_buy"
            app:layout_constraintStart_toStartOf="@id/tab_buy" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 确认按钮（固定在底部）-->
    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_btn_primary"
        android:gravity="center"
        android:text="买入下单"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ex.ss.lib.base.view.ImmersiveNavigationBarHolder
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 内容区域（可滚动）-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btn_confirm"
        app:layout_constraintTop_toBottomOf="@id/layout_tabs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 代码（共用）-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="代码"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_stock_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    tools:text="三协电机[920100]" />
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" />

            <!-- 现价（共用）-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="现价"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F44336"
                    android:textSize="14sp"
                    tools:text="66.3" />
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" />

            <!-- 买入价（仅卖出模式）-->
            <LinearLayout
                android:id="@+id/layout_buy_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="买入价"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_buy_price_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F44336"
                    android:textSize="14sp"
                    tools:text="8.83" />
            </LinearLayout>
            <View
                android:id="@+id/divider_buy_price"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:visibility="gone" />

            <!-- 买入价格 / 卖出价格（共用，label切换）-->
            <LinearLayout
                android:id="@+id/layout_trade_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:id="@+id/tv_trade_price_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="买入价格"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btn_price_decrease"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_stepper_btn"
                        android:gravity="center"
                        android:text="—"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/et_trade_price"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_quantity_input"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="#F44336"
                        android:textSize="14sp"
                        tools:text="66.3" />
                    <TextView
                        android:id="@+id/btn_price_increase"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_stepper_btn"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#666666"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/divider_trade_price"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <!-- 涨跌停（仅买入模式）-->
            <LinearLayout
                android:id="@+id/layout_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="涨跌停"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_limit_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    tools:text="跌停: 45.27" />
                <TextView
                    android:id="@+id/tv_limit_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:textColor="#F44336"
                    android:textSize="14sp"
                    tools:text="涨停: 84.05" />
            </LinearLayout>
            <View
                android:id="@+id/divider_limit"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <!-- 持仓手数（仅卖出模式）-->
            <LinearLayout
                android:id="@+id/layout_holding_lots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="持仓手数"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_holding_lots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    tools:text="38" />
            </LinearLayout>
            <View
                android:id="@+id/divider_holding_lots"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:visibility="gone" />

            <!-- 合位（共用）-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="合位"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btn_position_1_4"
                        android:layout_width="40dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_position_button"
                        android:gravity="center"
                        android:text="1/4"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/btn_position_1_3"
                        android:layout_width="40dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_position_button"
                        android:gravity="center"
                        android:text="1/3"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/btn_position_1_2"
                        android:layout_width="40dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_position_button"
                        android:gravity="center"
                        android:text="1/2"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/btn_position_all"
                        android:layout_width="40dp"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_position_button"
                        android:gravity="center"
                        android:text="全仓"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" />

            <!-- 买入/卖出手数（共用）-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <TextView
                    android:id="@+id/tv_lots_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="买入手数"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btn_decrease"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_stepper_btn"
                        android:gravity="center"
                        android:text="—"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_lots"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_quantity_input"
                        android:gravity="center"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        tools:text="0" />
                    <TextView
                        android:id="@+id/btn_increase"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_stepper_btn"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#666666"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" />

            <!-- 服务费（仅买入模式）-->
            <LinearLayout
                android:id="@+id/layout_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <TextView
                    android:id="@+id/tv_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="服务费(元)0.01%"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    tools:text="0.00" />
            </LinearLayout>
            <View
                android:id="@+id/divider_fee"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <!-- 可用金额（仅买入模式）-->
            <LinearLayout
                android:id="@+id/layout_available_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="可用金额"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_available_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    tools:text="69235.00" />
            </LinearLayout>
            <View
                android:id="@+id/divider_available_balance"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <!-- 应付/总额（共用，label切换）-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <TextView
                    android:id="@+id/tv_total_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="应付(元)"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    tools:text="0.00" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
