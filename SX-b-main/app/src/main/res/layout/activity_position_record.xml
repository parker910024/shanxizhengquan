<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 红色顶部区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_position_title_bar"
        android:orientation="vertical">

        <!-- 状态栏占位 -->
        <ex.ss.lib.base.view.ImmersiveStatusBarHolder
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 标题栏 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:padding="8dp"
                android:src="@drawable/icon_back"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我的持仓"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </FrameLayout>

        <!-- Tab栏 -->
        <LinearLayout
            android:id="@+id/layout_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tab_current"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="当前持仓"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tab_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="历史持仓"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tab_new_stock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:visibility="gone"
                android:text="新股持仓"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tab_subscription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="申购记录"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 指示器容器 -->
        <FrameLayout
            android:id="@+id/layout_indicator"
            android:layout_width="match_parent"
            android:layout_height="3dp">

            <View
                android:id="@+id/tab_indicator"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="@color/white" />

        </FrameLayout>

    </LinearLayout>

    <!-- 列标题 -->
    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="12dp">

        <!-- 占位：对应item中红色标签的宽度 -->
        <View
            android:layout_width="@dimen/position_header_offset"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tv_header_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="名称/代码"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_header_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="市值/数量"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_header_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="现价/买入"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_header_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="@dimen/position_data_margin_end"
            android:text="盈亏/盈亏比"
            android:textColor="#666666"
            android:textSize="13sp" />

    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

    <!-- 数据列表 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_records"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_position_record" />

        <!-- 空状态 -->
        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="没有数据了"
            android:textColor="#999999"
            android:textSize="14sp"
            android:visibility="gone" />

    </FrameLayout>

    <ex.ss.lib.base.view.ImmersiveNavigationBarHolder
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
