<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hq_card_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="12dp">

    <!-- 固定左侧：名称和代码 -->
    <LinearLayout
        android:id="@+id/layout_stock_info"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <!-- 股票名称 -->
        <TextView
            android:id="@+id/tv_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="贵州茅台"
            android:textColor="@color/hq_stock_name_color"
            android:textSize="15sp" />

        <!-- 股票代码 + 市场标识 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600519"
                android:textColor="@color/hq_stock_code_color"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_market_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_market_tag"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp"
                android:text="沪"
                android:textColor="@color/hq_indicator_color"
                android:textSize="9sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 可滑动区域：数据列 -->
    <HorizontalScrollView
        android:id="@+id/hsv_stock_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 现价 -->
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="1425.00"
                android:textColor="@color/hq_rise_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- 涨跌 -->
            <TextView
                android:id="@+id/tv_change"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="+15.20"
                android:textColor="@color/hq_rise_color"
                android:textSize="14sp" />

            <!-- 涨跌幅 -->
            <TextView
                android:id="@+id/tv_change_pct"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="+1.08%"
                android:textColor="@color/hq_rise_color"
                android:textSize="14sp" />

            <!-- 成交额 -->
            <TextView
                android:id="@+id/tv_volume"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="1105524.00万"
                android:textColor="@color/hq_stock_name_color"
                android:textSize="14sp" />

            <!-- 换手率 -->
            <TextView
                android:id="@+id/tv_turnover"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0.05%"
                android:textColor="@color/hq_stock_name_color"
                android:textSize="14sp" />

            <!-- 昨收价 -->
            <TextView
                android:id="@+id/tv_prev_close"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="1410.00"
                android:textColor="@color/hq_stock_name_color"
                android:textSize="14sp" />

            <!-- 今开价 -->
            <TextView
                android:id="@+id/tv_open"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="1412.00"
                android:textColor="@color/hq_stock_name_color"
                android:textSize="14sp" />

            <!-- 最高价 -->
            <TextView
                android:id="@+id/tv_high"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingEnd="16dp"
                android:text="1458.58"
                android:textColor="@color/hq_stock_name_color"
                android:textSize="14sp" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
