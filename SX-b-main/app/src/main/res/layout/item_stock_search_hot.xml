<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- 排名角标背景 -->
    <View
        android:id="@+id/view_rank_bg"
        android:layout_width="15dp"
        android:layout_height="15dp"

        android:background="@drawable/bg_rank_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 排名数字 -->
    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view_rank_bg"
        app:layout_constraintEnd_toEndOf="@+id/view_rank_bg"
        app:layout_constraintStart_toStartOf="@id/view_rank_bg"
        app:layout_constraintTop_toTopOf="@+id/view_rank_bg"
        tools:text="1" />


    <TextView
        android:id="@+id/tv_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#1A1A1A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_rank_bg"
        app:layout_constraintStart_toEndOf="@id/view_rank_bg"
        app:layout_constraintTop_toTopOf="@id/view_rank_bg"
        tools:text="平安电工" />


    <!-- 股票代码 -->
    <TextView
        android:id="@+id/tv_stock_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="#8B8B8B"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_stock_name"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_name"
        tools:text="sz001856" />



</androidx.constraintlayout.widget.ConstraintLayout>
