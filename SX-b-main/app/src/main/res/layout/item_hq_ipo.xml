<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <!-- 第一行：市场标签 + 名称 + 详情按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_market_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ipo_market_tag"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:text="北"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_ipo_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="海圣医疗"
            android:textColor="@color/hq_stock_name_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情+"
            android:textColor="@color/hq_rise_color"
            android:textSize="13sp" />

    </LinearLayout>

    <!-- 第二行：股票代码 -->
    <TextView
        android:id="@+id/tv_ipo_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="30dp"
        android:text="920166"
        android:textColor="@color/hq_stock_code_color"
        android:textSize="12sp" />

    <!-- 第三行：发行价格 | 中签率 | 发行总数 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <!-- 发行价格 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_issue_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥12.64"
                android:textColor="@color/hq_stock_name_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="发行价格"
                android:textColor="@color/hq_stock_code_color"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- 中签率 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_zq_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/hq_stock_name_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="中签率"
                android:textColor="@color/hq_stock_code_color"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- 发行总数 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fx_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1129.4万股"
                android:textColor="@color/hq_stock_name_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="发行总数"
                android:textColor="@color/hq_stock_code_color"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
