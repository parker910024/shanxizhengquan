<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!-- 红色标签 -->
    <TextView
        android:id="@+id/tv_trade_type"
        android:layout_width="@dimen/position_label_width"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/position_label_margin_start"
        android:background="@drawable/bg_position_type_tag"
        android:gravity="center"
        android:lineSpacingExtra="1dp"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_data"
        tools:text="新\n股\n交\n易" />

    <!-- 数据容器 -->
    <LinearLayout
        android:id="@+id/layout_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/position_data_margin"
        android:layout_marginEnd="@dimen/position_data_margin_end"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_trade_type"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 第一行: 股票名称 + 数值 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stock_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#303030"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="N至信" />

            <TextView
                android:id="@+id/tv_value_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#303030"
                android:textSize="14sp"
                tools:text="8.75" />

            <TextView
                android:id="@+id/tv_value_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#303030"
                android:textSize="14sp"
                tools:text="50.22" />

            <TextView
                android:id="@+id/tv_profit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="#E84C3D"
                android:textSize="14sp"
                tools:text="7,464,600.00" />

        </LinearLayout>

        <!-- 第二行: 市场+代码 + 数值 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ipo_market_tag"
                    android:text="沪"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    tools:text="603352" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_value_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="12sp"
                tools:text="180000" />

            <TextView
                android:id="@+id/tv_value_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="12sp"
                tools:text="9,039,600.00" />

            <TextView
                android:id="@+id/tv_profit_ratio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="#E84C3D"
                android:textSize="12sp"
                tools:text="473.94%" />

        </LinearLayout>

        <!-- 第三行: 日期 + 按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#999999"
                android:textSize="12sp"
                tools:text="2026-01-15" />

            <TextView
                android:id="@+id/btn_detail"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_position_btn_detail"
                android:gravity="center"
                android:text="详情"
                android:textColor="#119BDD"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_market"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_position_btn_market"
                android:gravity="center"
                android:text="行情"
                android:textColor="#5148A2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_profit"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_position_btn_profit"
                android:gravity="center"
                android:text="盈利"
                android:textColor="#BC4630"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_sell"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_btn_primary"
                android:gravity="center"
                android:text="卖出"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#F0F0F0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_data" />

</androidx.constraintlayout.widget.ConstraintLayout>
