<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA">

    <ex.ss.lib.base.view.ImmersiveStatusBarHolder
        android:id="@+id/imm_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imm_status_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- 标题栏 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_trade"
                    android:textColor="#19191D"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_refresh"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_trade_refresh"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_asset_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/ic_trade_asset_bg"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_holding_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/trade_holding_value"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_eye_hide"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_trade_eye_hide"
                    app:layout_constraintBottom_toBottomOf="@id/tv_holding_label"
                    app:layout_constraintStart_toEndOf="@id/tv_holding_label"
                    app:layout_constraintTop_toTopOf="@id/tv_holding_label" />

                <TextView
                    android:id="@+id/tv_account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/tv_holding_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_holding_label" />

                <TextView
                    android:id="@+id/tv_holding_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0.00"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_holding_label" />

                <TextView
                    android:id="@+id/tv_today_pnl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="累计盈亏+0.00"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_holding_value" />

                <TextView
                    android:id="@+id/tv_holding_pnl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="持仓盈亏+0.00"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_today_pnl"
                    app:layout_constraintStart_toEndOf="@id/tv_today_pnl"
                    app:layout_constraintTop_toTopOf="@id/tv_today_pnl" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 资产信息区 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_white_rounded"
                android:padding="16dp">

                <!-- 左侧 -->
                <TextView
                    android:id="@+id/tv_account_asset_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trade_account_asset"
                    android:textColor="#342E2E"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_account_asset_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="0.00"
                    android:textColor="#342E2E"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_account_asset_label"
                    app:layout_constraintStart_toEndOf="@id/tv_account_asset_label"
                    app:layout_constraintTop_toTopOf="@id/tv_account_asset_label" />

                <TextView
                    android:id="@+id/tv_available_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/trade_available_asset"
                    android:textColor="#342E2E"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_account_asset_label" />

                <TextView
                    android:id="@+id/tv_available_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="0.00"
                    android:textColor="#342E2E"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_available_label"
                    app:layout_constraintStart_toEndOf="@id/tv_available_label"
                    app:layout_constraintTop_toTopOf="@id/tv_available_label" />

                <!-- 右侧 -->
                <LinearLayout
                    android:id="@+id/ll_fund_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trade_fund_record"
                        android:textColor="#342E2E"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bank_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_fund_record">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trade_bank_transfer_in"
                        android:textColor="#342E2E"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 交易功能区 第一行：买、卖、查询、持仓、撤单 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_white_rounded"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_buy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_trade_buy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/trade_buy"
                            android:textColor="#19191D"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sell"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_trade_sell" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/trade_sell"
                            android:textColor="#19191D"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_query"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_trade_query" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/trade_query"
                            android:textColor="#19191D"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_position"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_trade_position" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/trade_position"
                            android:textColor="#19191D"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_trade_cancel" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/trade_cancel"
                            android:textColor="#19191D"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 第二行：委、成、对账单、银证转账、更多 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_trade_order" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/trade_order"
                            android:textColor="#19191D"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_deal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_trade_deal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/trade_deal"
                            android:textColor="#19191D"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_statement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_trade_statement" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/trade_statement"
                            android:textColor="#19191D"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_bank_transfer_action"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_trade_bank_transfer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/trade_bank_transfer"
                            android:textColor="#19191D"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_more"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_trade_more" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/trade_more"
                            android:textColor="#19191D"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 功能卡片区 2x2 - 整体使用一个白色圆角背景 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_white_rounded"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- 第一行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 新股新债 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_new_stock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iv_new_stock"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_trade_otc"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_new_stock_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/trade_new_stock"
                            android:textColor="#303030"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/iv_new_stock"
                            app:layout_constraintStart_toEndOf="@id/iv_new_stock"
                            app:layout_constraintTop_toTopOf="@id/iv_new_stock" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 场外撮合交易 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_otc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iv_otc"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_trade_new_stock"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_otc_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/trade_otc"
                            android:textColor="#303030"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/iv_otc"
                            app:layout_constraintStart_toEndOf="@id/iv_otc"
                            app:layout_constraintTop_toTopOf="@id/iv_otc" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <!-- 第二行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <!-- 国债逆回购 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_treasury"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iv_treasury"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_trade_wealth"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_treasury_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/trade_treasury"
                            android:textColor="#303030"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@id/iv_treasury"
                            app:layout_constraintTop_toTopOf="@id/iv_treasury" />

                        <TextView
                            android:id="@+id/tv_treasury_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="年化利率\n1.585%"
                            android:textColor="#626061"
                            android:textSize="12sp"
                            app:layout_constraintStart_toEndOf="@id/iv_treasury"
                            app:layout_constraintTop_toBottomOf="@+id/tv_treasury_title" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 智汇现金理财 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_wealth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iv_wealth"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_trade_treasury"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_wealth_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/trade_wealth"
                            android:textColor="#303030"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@id/iv_wealth"
                            app:layout_constraintTop_toTopOf="@id/iv_wealth" />

                        <TextView
                            android:id="@+id/tv_wealth_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="年化利率6.88%"
                            android:textColor="#626061"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@id/iv_wealth"
                            app:layout_constraintStart_toEndOf="@id/iv_wealth" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 菜单列表 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_white_rounded"
                android:orientation="vertical">

                <!-- 科创板 -->
                <include
                    android:id="@+id/menu_sci_tech"
                    layout="@layout/item_trade_menu"
                    android:visibility="gone" />

                <View
                    android:id="@+id/divider_sci_tech"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#E5E5E5"
                    android:visibility="gone" />

                <!-- 龙虎榜 -->
                <include
                    android:id="@+id/menu_dragon"
                    layout="@layout/item_trade_menu" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#E5E5E5" />

                <!-- 消息通知 -->
                <include
                    android:id="@+id/menu_notification"
                    layout="@layout/item_trade_menu" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#E5E5E5" />

                <!-- 修改交易密码 -->
                <include
                    android:id="@+id/menu_change_pwd"
                    layout="@layout/item_trade_menu" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#E5E5E5" />

                <!-- 银行卡管理 -->
                <include
                    android:id="@+id/menu_bank_card"
                    layout="@layout/item_trade_menu" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#E5E5E5" />

                <!-- 银证转出 -->
                <include
                    android:id="@+id/menu_transfer_out"
                    layout="@layout/item_trade_menu" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#E5E5E5" />

                <!-- 更多功能 -->
                <include
                    android:id="@+id/menu_more_func"
                    layout="@layout/item_trade_menu" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
