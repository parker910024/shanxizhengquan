<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/view_menu_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_menu_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/shape_menu_shadow"
        app:layout_constraintBottom_toTopOf="@id/nav_bar" />

    <LinearLayout
        android:id="@+id/lin_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tab_bg_color"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintEnd_toStartOf="@id/lin_hq"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_menu_line">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tab_home_selected" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tab_home"
            android:textColor="@color/text_second_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_hq"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tab_bg_color"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintEnd_toStartOf="@id/lin_trade"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/lin_home"
        app:layout_constraintTop_toBottomOf="@id/view_menu_line">

        <ImageView
            android:id="@+id/iv_hq"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tab_hq_unselected" />

        <TextView
            android:id="@+id/tv_hq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tab_hq"
            android:textColor="@color/text_second_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_trade"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tab_bg_color"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintEnd_toStartOf="@id/lin_financial"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/lin_hq"
        app:layout_constraintTop_toBottomOf="@id/view_menu_line">

        <ImageView
            android:id="@+id/iv_trade"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tab_trade_unselected" />

        <TextView
            android:id="@+id/tv_trade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tab_trade"
            android:textColor="@color/text_second_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_financial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tab_bg_color"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintEnd_toStartOf="@id/lin_mine"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/lin_trade"
        app:layout_constraintTop_toBottomOf="@id/view_menu_line">

        <ImageView
            android:id="@+id/iv_financial"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tab_financial_unselected" />

        <TextView
            android:id="@+id/tv_financial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tab_financial"
            android:textColor="@color/text_second_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_mine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tab_bg_color"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/lin_financial"
        app:layout_constraintTop_toBottomOf="@id/view_menu_line">

        <ImageView
            android:id="@+id/iv_mine"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tab_mine_unselected" />

        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tab_mine"
            android:textColor="@color/text_second_color"
            android:textSize="10sp" />

    </LinearLayout>

    <ex.ss.lib.base.view.ImmersiveNavigationBarHolder
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
