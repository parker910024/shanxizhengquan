<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header 背景 (加大高度以支持卡片重叠) -->
    <ImageView
        android:id="@+id/iv_header_bg"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_register_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 返回按钮 -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:contentDescription="返回"
        android:padding="8dp"
        android:src="@drawable/ic_register_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 立即注册标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 卡片起始位置引导线 (与 header 重叠) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_card_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp" />

    <!-- 可滚动内容区域 -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_card_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- 白色卡片容器 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Slogan 图片 (在卡片内部) -->
                    <ImageView
                        android:id="@+id/iv_slogan"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_register_slogan" />

                    <!-- 用户名输入区域 -->
                    <LinearLayout
                        android:id="@+id/layout_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="14dp">

                        <ImageView
                            android:id="@+id/iv_phone_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="用户名"
                            android:src="@drawable/ic_input_phone" />

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="请输入用户名（9位字母+数字）"
                            android:inputType="textVisiblePassword"
                            android:maxLength="9"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_hint"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- 手机号分割线 -->
                    <View
                        android:id="@+id/divider_phone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/register_divider" />

                    <!-- 密码输入区域 -->
                    <LinearLayout
                        android:id="@+id/layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="14dp">

                        <ImageView
                            android:id="@+id/iv_password_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="密码"
                            android:src="@drawable/ic_input_lock" />

                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="请输入密码"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_hint"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_password_toggle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:contentDescription="显示/隐藏密码"
                            android:src="@drawable/ic_eye_open_small" />
                    </LinearLayout>

                    <!-- 密码分割线 -->
                    <View
                        android:id="@+id/divider_password"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/register_divider" />

                    <!-- 确认密码输入区域 -->
                    <LinearLayout
                        android:id="@+id/layout_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="14dp">

                        <ImageView
                            android:id="@+id/iv_confirm_password_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="确认密码"
                            android:src="@drawable/ic_input_shield" />

                        <EditText
                            android:id="@+id/et_confirm_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="请再次输入密码"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_hint"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_confirm_password_toggle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:contentDescription="显示/隐藏密码"
                            android:src="@drawable/ic_eye_open_small" />
                    </LinearLayout>

                    <!-- 确认密码分割线 -->
                    <View
                        android:id="@+id/divider_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/register_divider" />

                    <!-- 支付密码输入区域 -->
                    <LinearLayout
                        android:id="@+id/layout_payment_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="14dp">

                        <ImageView
                            android:id="@+id/iv_payment_code_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="支付密码"
                            android:src="@drawable/ic_input_lock" />

                        <EditText
                            android:id="@+id/et_payment_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="请输入支付密码"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_hint"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_payment_code_toggle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:contentDescription="显示/隐藏密码"
                            android:src="@drawable/ic_eye_open_small" />
                    </LinearLayout>

                    <!-- 支付密码分割线 -->
                    <View
                        android:id="@+id/divider_payment_code"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/register_divider" />

                    <!-- 机构码输入区域 -->
                    <LinearLayout
                        android:id="@+id/layout_invite_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="14dp">

                        <ImageView
                            android:id="@+id/iv_invite_code_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="机构码"
                            android:src="@drawable/ic_input_mail" />

                        <EditText
                            android:id="@+id/et_invite_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="请输入机构码"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_hint"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- 机构码分割线 -->
                    <View
                        android:id="@+id/divider_invite_code"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/register_divider" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 极速开卡按钮 (在协议上方，符合 Figma 设计) -->
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_register_btn"
                android:text="极速开户"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- 用户协议 (在按钮下方，符合 Figma 设计) -->
            <LinearLayout
                android:id="@+id/layout_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_agreement"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:button="@drawable/bg_login_checkbox"
                    android:checked="true" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="我同意签署《用户协议》《隐私政策》"
                    android:textColor="@color/login_text_hint"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 底部图片 -->
            <ImageView
                android:id="@+id/iv_bottom_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/img_register_bottom" />

        </LinearLayout>
    </ScrollView>

    <!-- 底部导航栏占位 -->
    <ex.ss.lib.base.view.ImmersiveNavigationBarHolder
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
