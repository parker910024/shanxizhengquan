<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_round"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单明细"
        android:textColor="#202020"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- 名称 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="名称"
            android:textColor="#767676"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_confirm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#202020"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 代码 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="代码"
            android:textColor="#767676"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_confirm_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#202020"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 买入价格 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="买入价格"
            android:textColor="#767676"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_confirm_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#202020"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 买入数量 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="买入数量"
            android:textColor="#767676"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_confirm_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#202020"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 金额(估算) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="金额(估算)"
            android:textColor="#767676"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_confirm_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#202020"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 手续费 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手续费"
            android:textColor="#767676"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_confirm_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#202020"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 按钮行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_cancel_confirm"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="返回"
            android:textColor="#747474"
            android:textSize="15sp"
            android:background="@drawable/bg_contract_dialog_cancel"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/btn_ok_confirm"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/bg_btn_red"
            android:stateListAnimator="@null" />
    </LinearLayout>

</LinearLayout>
