<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="6dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="4dp"

    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/layout_index_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_index_card_rise"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 指数名称 -->
        <TextView
            android:id="@+id/tv_index_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上证指数"
            android:textColor="@color/hq_title_color"
            android:textSize="14sp" />

        <!-- 指数数值 -->
        <TextView
            android:id="@+id/tv_index_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="4157.98"
            android:textColor="@color/hq_rise_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 涨跌值和涨跌幅 -->
        <TextView
            android:id="@+id/tv_index_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="+6.74  0.16%"
            android:textColor="@color/hq_rise_color"
            android:textSize="12sp" />

        <!-- 迷你走势图（东方财富 trends2 API 数据驱动） -->
        <view
            class="com.yanshu.app.ui.hq.view.IndexSparklineView"
            android:id="@+id/view_chart"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
