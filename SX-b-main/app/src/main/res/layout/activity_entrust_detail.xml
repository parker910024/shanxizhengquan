<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hq_page_bg"
    android:orientation="vertical">

    <ex.ss.lib.base.view.ImmersiveStatusBarHolder
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="委托详情"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 白色卡片：对照 Web 逐行展示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- 委托股票 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="委托股票"
                    android:textColor="@color/hq_text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_stock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    tools:text="世昌股份(920022)" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/hq_divider_color" />

            <!-- 买卖类型 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="买卖类型"
                    android:textColor="@color/hq_text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_buy_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hq_rise_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="证券买入" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/hq_divider_color" />

            <!-- 成交类型 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="成交类型"
                    android:textColor="@color/hq_text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cjlx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    tools:text="挂单" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/hq_divider_color" />

            <!-- 委托手数 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="委托手数"
                    android:textColor="@color/hq_text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_can_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    tools:text="2" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/hq_divider_color" />

            <!-- 委托股数 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="委托股数"
                    android:textColor="@color/hq_text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    tools:text="200" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/hq_divider_color" />

            <!-- 委托价值（委托价格） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="委托价值"
                    android:textColor="@color/hq_text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_buy_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    tools:text="10.90" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/hq_divider_color" />

            <!-- 委托倍数 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="委托倍数"
                    android:textColor="@color/hq_text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_multiplying"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    tools:text="1" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/hq_divider_color" />

            <!-- 市值 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="市值"
                    android:textColor="@color/hq_text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_city_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    tools:text="2180.00" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/hq_divider_color" />

            <!-- 委托时间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="委托时间"
                    android:textColor="@color/hq_text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    tools:text="2025-12-05 23:35:49" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 取消委托按钮（对照 Web 底部红色按钮） -->
    <LinearLayout
        android:id="@+id/ll_cancel_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_btn_red"
            android:text="取消委托"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
