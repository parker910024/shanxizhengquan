<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.transfer.TransferInDetailActivity">

    <include
        android:id="@+id/title_bar"
        layout="@layout/include_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 金额范围提示 -->
    <TextView
        android:id="@+id/tv_amount_range_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:textColor="@color/text_second_color"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        tools:text="转入金额范围：100 - 11111 元" />

    <!-- 金额输入区 -->
    <LinearLayout
        android:id="@+id/layout_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_amount_range_hint">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/text_selected_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:background="@null"
            android:hint="请输入转入金额"
            android:inputType="numberDecimal"
            android:paddingVertical="14dp"
            android:textColor="@color/text_selected_color"
            android:textColorHint="@color/text_second_color"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider_amount"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="#EEEEEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_amount" />

    <!-- 最小金额提示 -->
    <TextView
        android:id="@+id/tv_min_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_second_color"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_amount"
        tools:text="最小转入金额为100元" />

    <!-- 固定金额选择区域 -->
    <LinearLayout
        android:id="@+id/layout_fixed_amounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_min_hint">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="请选择以下金额"
            android:textColor="@color/text_second_color"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_amount_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>

    <!-- 确认转入按钮 -->
    <Button
        android:id="@+id/btn_transfer_in"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btn_red"
        android:enabled="false"
        android:text="确认转入"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/layout_fixed_amounts" />

    <ex.ss.lib.base.view.ImmersiveNavigationBarHolder
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
